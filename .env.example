# Nyx Environment Variables
# Copy this file to .env and fill in values

# Application Settings
NYX_DEBUG=false
NYX_DATA_DIR=./data
NYX_CONFIG_DIR=./config

# Database
NYX_DATABASE_URL=sqlite:///./nyx.db
NYX_DATABASE_POOL_SIZE=20
NYX_DATABASE_MAX_OVERFLOW=40

# HTTP Client
NYX_HTTP_TIMEOUT=10
NYX_HTTP_RETRIES=3
NYX_HTTP_MAX_CONCURRENT_REQUESTS=100

# Cache Settings
NYX_CACHE_ENABLED=true
NYX_CACHE_TTL=3600
NYX_CACHE_MAX_SIZE=1000
NYX_CACHE_BACKEND=memory

# GUI Settings
NYX_GUI_THEME=dark
NYX_GUI_WINDOW_WIDTH=1400
NYX_GUI_WINDOW_HEIGHT=900
NYX_GUI_FONT_SIZE=10

# Security
NYX_SECURITY_ENABLE_ENCRYPTION=true
NYX_SECURITY_REQUIRE_MASTER_PASSWORD=true
NYX_SECURITY_PASSWORD_HASH_ITERATIONS=100000
NYX_SECURITY_SESSION_TIMEOUT=3600

# Logging
NYX_LOGGING_LEVEL=INFO
NYX_LOGGING_FILE_PATH=logs/nyx.log
NYX_LOGGING_MAX_FILE_SIZE=10485760
NYX_LOGGING_BACKUP_COUNT=5

# Proxy Settings (if needed)
NYX_PROXY_ENABLED=false
NYX_PROXY_HTTP_PROXY=
NYX_PROXY_HTTPS_PROXY=
NYX_PROXY_SOCKS_PROXY=

# Tor Settings (if needed)
NYX_TOR_ENABLED=false
NYX_TOR_SOCKS_HOST=127.0.0.1
NYX_TOR_SOCKS_PORT=9050
NYX_TOR_CONTROL_HOST=127.0.0.1
NYX_TOR_CONTROL_PORT=9051
NYX_TOR_USE_NEW_IDENTITY=false

# API Keys (store securely, never commit)
# Placeholder for future API key configuration
